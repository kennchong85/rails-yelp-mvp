

<h1>Here are all the restaurants</h1>


<div class="card-group">
<% @restaurants.each do |restaurant| %>
  <div class="card margin-card">
    <%=image_tag("restaurant-chocolat.jpg", alt: "Example Image", class: "card-img-top")%>
    <div class="card-body">
     <h5 class="card-title"><%= restaurant.name %></h5>
      <p class="card-text"><%= restaurant.address %></p>
      <p class="card-text"><small class="text-muted"><%= ((Time.now - restaurant.updated_at) / 1000).to_i %> minutes ago</small></p>
      <p class="card-text no-td "><small class="text-muted"><a href=<%= "/restaurants/#{restaurant.id}/edit" %>><i class="fas fa-edit"></i></a></small></p>
    </div>
  </div>
<% end %>
</div>
